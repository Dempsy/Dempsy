<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean name="transport"
		class="com.nokia.dempsy.messagetransport.tcp.TcpTransport" >
		<property name="overflowHandler" >
		  <bean class="com.nokia.dempsy.DempsyTestBase$OverflowHandler" />
		</property>

	   <!-- For testing purposes we are going to set the Outbound queue to unbounded 
           when we are also going to 'failFast.' In this way tests that check for failFast, 
           which normally only affects the Receive side, can also assume blocking all 
           the way through -->
      <property name="maxNumberOfQueuedOutbound" value="-1" />

       <!-- Failfast defaults to false for the TcpTransport -->
    </bean>
</beans>
