<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>


   <bean id="properties"
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

   <bean
       class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />

	<bean name="dempsy" class="com.nokia.dempsy.Dempsy" autowire="byType"
		init-method="start" destroy-method="stop">
		<property name="clusterSessionFactory" ref="clusterSessionFactory" />
		<property name="clusterCheck">
			<bean class="com.nokia.dempsy.router.SpecificClusterCheck">
				<constructor-arg>
					<bean class="com.nokia.dempsy.config.ClusterId">
						<constructor-arg value="test-app" />
						<constructor-arg value="test-cluster2" />
					</bean>
				</constructor-arg>
			</bean>
		</property>
      <property name="defaultRoutingStrategy" ref="routingstrategy" />
      <property name="defaultSerializer" ref="serializer" />
      <property name="defaultStatsCollectorFactory">
      	<bean class="com.nokia.dempsy.monitoring.coda.StatsCollectorFactoryCoda" />
      </property>
      <property name="defaultTransport" ref="transport" />
   </bean>
</beans>
