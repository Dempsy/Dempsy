<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">


   <bean id="properties"
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" />

   <bean id="localVMContainerClusterSessionFactory" class="net.dempsy.cluster.local.LocalClusterSessionFactory"/>

   <bean id="Dempsy" class="net.dempsy.Dempsy" autowire="byType" destroy-method="stop">
      <property name="clusterSessionFactory" ref="localVMContainerClusterSessionFactory"/>
      <property name="clusterCheck">
         <bean class="net.dempsy.router.AlwaysInCurrentCluster" />
      </property>
      <property name="defaultRoutingStrategy">
         <bean class="net.dempsy.router.DecentralizedRoutingStrategy" >
            <constructor-arg type="int" value="1" />
            <constructor-arg type="int" value="1" />
         </bean>
      </property>
      <property name="defaultSerializer">
         <bean class="net.dempsy.serialization.kryo.KryoSerializer" />
      </property>
      <property name="defaultStatsCollectorFactory">
      	<bean class="net.dempsy.monitoring.coda.StatsCollectorFactoryCoda" />
      </property>
      <property name="defaultTransport">
         <bean class="net.dempsy.messagetransport.blockingqueue.BlockingQueueTransport" />
      </property>
   </bean>
</beans>
